<table>
  <thead>
    <tr>
      <th style='text-align: left;' colspan="1">Quote</th>
      <th style='text-align: left;' colspan="1">Author</th>
      <th style='text-align: left;' colspan="2">Likes</th>
      <th style='text-align: left;' colspan="1">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.body %></td>
        <td><%= quote.author %></td>
        <td><%= quote.likes_count %></td>
        <td>
          <%= button_to "Like", quote_path(quote), method: :patch, params: { like: true } %>
        </td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= button_to 'Destroy', quote, method: :delete, data: { turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>